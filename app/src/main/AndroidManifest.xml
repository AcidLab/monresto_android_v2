<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.monresto.acidlabs.monresto">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".UI.HomeActivity" />
        <activity android:name=".UI.RestaurantDetails.RestaurantDetailsActivity" />
        <activity android:name=".UI.User.LoginActivity" />
        <activity android:name=".UI.User.RegisterActivity" />
        <activity android:name=".UI.Maps.MapsActivity" />
        <activity android:name=".UI.RestaurantDetails.Order.OrderActivity" />
        <activity android:name=".UI.Profile.ProfileActivity" />
        <activity android:name=".UI.Profile.Settings.ProfileSettingsActivity" />
        <activity android:name=".UI.Profile.Address.NewAddressActivity" />
        <activity android:name=".UI.FAQ.FAQActivity" />
        <activity android:name=".UI.Cart.CartActivity" />
        <activity android:name=".UI.Checkout.CheckoutActivity" />
        <activity
            android:name=".UI.FAQ.FAQAnswerActivity"
            android:excludeFromRecents="true"
            android:theme="@style/Theme.AppCompat.Light.Dialog" />
        <activity android:name=".UI.Profile.Settings.EditProfileActivity" />
        <activity android:name=".UI.Profile.Settings.AddressSettingsActivity" />
        <activity android:name=".UI.Profile.Address.EditAddressActivity" />
        <activity android:name=".UI.User.SelectAddressActivity"
            android:excludeFromRecents="true"
            android:theme="@style/Theme.AppCompat.Light.Dialog" />
        <activity android:name=".UI.Homepage.HomepageActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".UI.Main.MainActivity" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        // Fixes google maps on Android P
        // TODO: Remove after google fixes this
        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />


    </application>

</manifest>