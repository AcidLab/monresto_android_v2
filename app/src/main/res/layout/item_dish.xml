<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="5dp">

    <ImageView
        android:id="@+id/dish_bg_id"
        android:layout_width="153dp"
        android:layout_height="97dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dish_name_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Nom du plat"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dish_price_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prix" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/details_btn_id"

                android:layout_width="86dp"
                android:layout_height="38dp"

                android:background="@drawable/buttonshape"
                android:text="DÃ©tails"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/add_btn_id"

                android:layout_width="86dp"
                android:layout_height="38dp"
                android:layout_marginLeft="10dp"

                android:background="@drawable/buttonshape"
                android:text="Ajouter"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/favorite_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/heart_empty" />

</LinearLayout>