<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/option_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:text="Nom de l'option"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/option_price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/option_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="3dp"
        android:text="Prix de l'option"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/option_radio"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/option_radio"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>